# Database Configuration - PostgreSQL
DB_PG_HOST=localhost
DB_PG_PORT=5432
DB_PG_NAME=osm2
DB_PG_USER=postgres
DB_PG_PASSWORD=your_secure_password_here

# Database Configuration - SQL Server (optional)
DB_SQLSRV_HOST=
DB_SQLSRV_PORT=1433
DB_SQLSRV_NAME=
DB_SQLSRV_USER=
DB_SQLSRV_PASSWORD=

# Session Configuration
SESSION_TIMEOUT=3600

# Upload Configuration
UPLOAD_MAX_SIZE=5242880

# Debug Mode (set to false in production)
ENABLE_DEBUG=false

# Security Configuration
# Rate limiting settings
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_BLOCK_DURATION_MINUTES=30

# Password policy
REQUIRE_STRONG_PASSWORDS=false
MIN_PASSWORD_LENGTH=4

# HTTPS Configuration (set to true when using HTTPS)
FORCE_HTTPS=false

# CORS Configuration (if needed)
ALLOWED_ORIGINS=

# Error Logging
ERROR_LOG_PATH=/var/log/osm-web/errors.log
